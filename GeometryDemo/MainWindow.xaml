<Window x:Class="GeometryDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeometryDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" MouseMove="Canvas_OnMouseMove" Background="Transparent"/>
        <TextBlock x:Name="tbPosition" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="CadetBlue" Opacity="0.8" FontWeight="Bold"/>
    </Grid>
</Window>
