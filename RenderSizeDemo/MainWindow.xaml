<Window x:Class="RenderSizeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RenderSizeDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions> 
        <Button Width="80" Height="40" Content="放大" Click="ScaleButton_OnClick"/>
        <Canvas x:Name="canvas" Grid.Row="1" Width="400" Height="400" Background="AliceBlue">
            <Rectangle Width="20" Height="30" Fill="Red" Canvas.Left="80" Canvas.Top="70"></Rectangle>
        </Canvas>
    </Grid>
</Window>
